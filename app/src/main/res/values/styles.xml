<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MainButtonStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="cornerRadius">@dimen/radius_shape</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="iconSize">32dp</item>
        <item name="iconPadding">8dp</item>
    </style>
    <style name="CommonButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">12dp</item>
        <item name="iconTint">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>
</resources>